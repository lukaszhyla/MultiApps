<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lhyla.p23databinding.StartingActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MainActivity"
        android:id="@+id/start_act_go_main_act_btn"
        android:textAlignment="center"
        android:textSize="16sp"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LoadImageActivity"
        android:id="@+id/start_act_go_load_image_act_btn"
        android:textAlignment="center"
        android:textSize="16sp"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMSActivity"
        android:id="@+id/start_act_go_sms_act_btn"
        android:textAlignment="center"
        android:textSize="16sp"/>


</LinearLayout>
